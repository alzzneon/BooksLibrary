<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextNamaPeminjam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nama Peminjam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextBukuDipinjam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Buku Yang Dipinjam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNamaPeminjam" />

    <EditText
        android:id="@+id/editTextTanggalPinjam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="Tanggal Peminjaman"
        android:inputType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextBukuDipinjam" />

    <Button
        android:id="@+id/buttonAddPeminjaman"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tambah Peminjaman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextTanggalPinjam" />

</androidx.constraintlayout.widget.ConstraintLayout>