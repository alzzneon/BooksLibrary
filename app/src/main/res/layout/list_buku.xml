<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvJudulBuku"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Judul Buku"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvPengarangBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengarang"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvJudulBuku"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvTanggalDitambahkan"
            android:layout_width="232dp"
            android:layout_height="19dp"
            android:layout_marginTop="12dp"
            android:text="@{buku.tanggalDitambahkan}"
            android:textColor="#757575"
            android:textSize="14sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvPengarangBuku"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvPengarangBuku"
            app:layout_constraintTop_toBottomOf="@id/tvPengarangBuku"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/ibEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_editbuku"
            android:padding="18dp"
            android:contentDescription="Edit"
            app:layout_constraintTop_toTopOf="@id/tvPengarangBuku"
            app:layout_constraintBottom_toBottomOf="@id/tvPengarangBuku"
            app:layout_constraintEnd_toStartOf="@id/ibDelete"/>

        <ImageView
            android:id="@+id/ibDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delbuku"
            android:padding="18dp"
            android:contentDescription="Delete"
            app:layout_constraintTop_toTopOf="@id/ibEdit"
            app:layout_constraintBottom_toBottomOf="@id/ibEdit"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
